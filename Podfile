# Uncomment the next line to define a global platform for your project
platform :ios, '11.2'

target 'Tumblr' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Tumblr
  # Rx
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxSwiftExt'
  pod 'RxDataSources'

  # Networking
  pod 'Kingfisher'
  pod 'Moya/RxSwift'

  # Layout
  pod 'Then'
  pod 'SnapKit'

  # Other
  pod 'SimpleImageViewer'

end
